<!doctype html>
<html lang="en">
  <head>
    <link href="https://fonts.googleapis.com/css?family=Rubik" rel="stylesheet">
    <style>
    @import "bootstrap";
    
    
body {            
    background-color: #480059;
    font-family: 'Rubik', sans-serif;       
    color: white;
    margin-top: 50px; /*This has gotta stay here to give only this page a gap at the top*/
}
input {            
    font-family: 'Rubik', sans-serif;  
    padding:5px;
  font-size:16px;
}
.center {
  margin: auto;
  width: 802px;
  border: 3px solid #F7E400; /*official MNSU gold*/
  padding: 10px;
  text-align: center;
}

.btn {
  border-radius: 5px;
  padding: 5px 25px;
  font-size: 15px;
  text-decoration: none;
  margin: 7px;
  color: #FFFFFF;
  position: relative;
  display: inline-block;
}

.btn:active {
  transform: translate(0px, 5px);
  -webkit-transform: translate(0px, 5px);
}
.purple {
  background-color: #9b59b6;
}
.purple:hover {
  background-color: #B573D0;
}
.grey {
  background-color: #A0A0A0;
}
.grey:hover {
  background-color: #D3D3D3;
}
</style>
  </head>
  <body>
    <div class="center">
  <%= image_tag "splash.png" %>
  <h2>Please Log In:</h2><br>
  <form action="/static_pages/student_portal">
  <main>
    <% provide(:title, "Log in") %>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>

      <%= f.label :email %><br>
      <%= f.email_field :email, class: 'form-control' %>
<br><br>
      <%= f.label :password %><br>
      <%= f.password_field :password, class: 'form-control' %><br><br>

      <%= f.submit "Log in", class: "btn purple" %>
    <% end %>
    
    <% if logged_in? %>
      <p>we're in boys</p>
    <% else %>
      <p>no-one logged in</p>
    <% end %>
            

  </div>
</div>
</div>